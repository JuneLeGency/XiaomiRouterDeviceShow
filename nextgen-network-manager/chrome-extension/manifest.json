{
  "manifest_version": 3,
  "name": "网络设备管理器",
  "version": "1.0.0",
  "description": "现代化的网络设备管理扩展",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "http://192.168.31.1/*",
    "http://localhost:*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://192.168.31.1/*", "http://localhost:*/*"],
      "js": ["dist/content/content.js"]
    }
  ],
  "background": {
    "service_worker": "dist/background/background.js"
  },
  "action": {
    "default_popup": "dist/src/popup/index.html",
    "default_title": "设备管理"
  },
  "icons": {
    "16": "src/assets/icon16.png",
    "48": "src/assets/icon48.png",
    "128": "src/assets/icon128.png"
  }
}